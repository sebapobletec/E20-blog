<h1>Users</h1>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th colspan="2"> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.order(:name).each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Change role',user, method: :patch, class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar el usuario?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
